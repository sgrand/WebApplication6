@using static WebApplication6.Helpers.CultureHelper;
@{
    ViewData["Title"] = "Home Page";
}


<div class="featurette">
    <div class="featurette-inner text-center">
        <form id="searchform" role="form" class="search form-horizontal" onsubmit="return false">
            <h3 class="no-margin-top h1">Search for a city</h3>
            <hr />
            <div class="input-group input-group-lg">
                <input id="searchbar" type="search" placeholder="search" class="form-control">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" id="submit-search" ><span class="glyphicon glyphicon-search"></span></button>
                </span>
            </div> 
        </form>
    </div>
</div>

<h4>@LocString["Text"]</h4>


<script async defer
        src="@String.Format("https://maps.googleapis.com/maps/api/js?key=AIzaSyC3kLBfLI1Nv-phaS2_KAxcxqHv_zGjD3k&signed_in=true&libraries=places,geometry&callback=initAutocomplete&language={0}",
           GetCurrentCulture())">
</script>
